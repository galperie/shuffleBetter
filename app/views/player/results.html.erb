<div class="container-fluid">

  <h3>Choose the playlist you'd like to play:</h3>

  <div class="row">

    <div class="col-md-6">
      <h3>Random Playlists:</h3>

      <%= form_tag('/play', method: 'get') do %>
          <div class="radio">
            <% @playlist_options.each do |playlist| %>
                <%= radio_button_tag :requested_playlist, playlist.uri %>
                <%= label_tag :requested_playlist, playlist.name + ' - ' + playlist.owner.display_name.to_s %>
            <% end %>
          </div>
          <%= submit_tag('Play', :class => 'btn btn-success') %>
      <% end %>

    </div>


    <div class="col-md-6">
      <h3>Spotify Featured Playlists:</h3>

      <%= form_tag('/play', method: 'get') do %>
          <div class="radio">
            <% @playlist_featured_options.each do |playlist| %>
                <%= radio_button_tag :requested_playlist, playlist.uri %>
                <%= label_tag :requested_playlist, playlist.name + ' - ' + playlist.owner.display_name.to_s %>
            <% end %>
          </div>
          <%= submit_tag('Play', :class => 'btn btn-success') %>
      <% end %>

    </div>
  </div>

  <div class="row margin-top-10">
    <div class="col-md-12">
      <%= button_to 'Back to Search', '/player', :method => 'get', :class => 'btn btn-primary' %>
    </div>
  </div>

</div>


<script>
  $(document).ready(function () {
    var x = document.getElementsByTagName('LABEL');

    for (var i = 0; i < x.length; i++) {
      if (x[i].textContent.includes("- Spotify")) {
        x[i].style.fontWeight = 'bold';
      }
    }
  })
</script>